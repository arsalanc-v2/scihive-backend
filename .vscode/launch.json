  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Server",
      "type": "python",
      "request": "launch",
      "module": "src.app",
      "justMyCode": false,
      "console": "integratedTerminal",
      "env": {
        "ENV_FILE": ".local_env"
      }
    },
    {
      "name": "Fetch Arxiv",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "src/app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0"
      },
      "args": ["fetch-arxiv"]
    },
    {
      "name": "Run Gunicorn",
      "type": "python",
      "request": "launch",
      "justMyCode": false,
      "console": "integratedTerminal",
      "gevent": true,
      "program": "./venv/bin/gunicorn",
      "args": ["src.app:flask_app", "--reload", "--worker-class", "eventlet", "-w", "1", "-b", "127.0.0.1:5000", "-t", "10000"],
      "env": {
        "ENV_FILE": ".local_env",
        "OBJC_DISABLE_INITIALIZE_FORK_SAFETY": "YES"
      }
    },
    {
      "name": "Fetch Twitter",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "src/app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0"
      },
      "args": ["fetch-twitter"]
    },
    {
      "name": "Fetch PapersWithCode",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "src/app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0"
      },
      "args": ["fetch-paperswithcode"]
    },
    {
      "name": "Migrate DB",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "src/app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0"
      },
      "args": ["migrate-db", "--path", "../backup"]
    },
    {
      "name": "Fix stars",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "src/app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0"
      },
      "args": ["fix-stars-count"]
    }
  ]
}
